<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    tools:context=".Demo">

    <ImageView
        android:id="@+id/imgvw"
        android:layout_width="376dp"
        android:layout_height="241dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:scaleType="fitXY"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252"
        app:srcCompat="@drawable/cottonhome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Welcome to Our App !\n
One stop solution for Cotton Cultivation\n"
            android:textColor="#070707"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnpred"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:text="@string/predict_cotton_disease" />

        <Button
            android:id="@+id/trade"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:text="@string/trading_factor" />

        <Button
            android:id="@+id/typbtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Cotton Types" />

        <Button
            android:id="@+id/prodbtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cotton Production Analysis" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/textview"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#0A144E"

        android:textSize="39sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgvw" />

</androidx.constraintlayout.widget.ConstraintLayout>